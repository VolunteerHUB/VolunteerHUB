extends ../layout

block content
  h1 Add New Project
  
  form(method='POST', action='/project/create', class='form-horizontal')
    div(class='form-group')
      label(class='col-sm-3 control-label') Name
      div(class='col-sm-6')
        input(type='text', class='form-control', id='name', name='name', placeholder='Example Project')
    div(class='form-group')
      label(class='col-sm-3 control-label') Brief Description
      div(class='col-sm-6')
        textarea(class='form-control', id='brief', name='brief', placeholder='Example Brief Description', rows='2')
    div(class='form-group')
      label(class='col-sm-3 control-label') Detailed Description
      div(class='col-sm-6')
        textarea(class='form-control', id='detail', name='detail', placeholder='Example Detailed Description', rows='5')
    div(class='form-group')
      label(class='col-sm-3 control-label') Date & Time
      div(class='col-sm-6')
        div(class='input-group', id='datetimepicker')
          input(type='text', class='form-control', id='date', name='date', placeholder='Example Date & Time')
          span(class='input-group-addon')
            span(class='glyphicon glyphicon-calendar')
    div(class='form-group')
      label(class='col-sm-3 control-label') Location
      div(class='col-sm-6')
        div(class='input-group', id='locationpicker', data-toggle='modal', data-target='map_modal')
          input(type='text', class='form-control', id='location', name='location', placeholder='Example Location')
          span(class='input-group-addon', onclick='$("#map_modal").modal("show")')
            span(class='glyphicon glyphicon-map-marker')
    div(class='form-group')
      div(class='col-sm-offset-3 col-sm-8')
        button(type='submit', class='btn btn-primary') Create Project
        
  // Map Modal
  div(class='modal fade', id='map_modal', tabindex='-1', role='dialog')
    div(class='modal-dialog modal-lg')
      div(class='modal-content')
        div(class='modal-header')
          button(type='button', class='close', data-dismiss='modal')
            span &times;
          h4(class='modal-title') Choose Project Location
        div(class='modal-body')
          iframe(height='450em', width='850em', frameborder='0', scrolling='no', src='/utils/map')
        
  // Date & Time
  script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js')
  script(src='//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/v4.0.0/src/js/bootstrap-datetimepicker.js')
  script.
    $(function () {
      $('#datetimepicker').datetimepicker();
    });
