extends ../layout

block content
  div(class='panel panel-default')
    div(class='panel-heading')
      div(class='row')
        div(class='col-sm-11')
          div(class='col-sm-12')
            h3= project.name
        div(class='col-sm-1')
          a(class='btn btn-primary', href='#', role='button') JOIN
    div(class='panel-body')
      div(class='row')
        div(class='col-sm-12')
          div(class='col-sm-12')
            p= project.description
      br
      div(class='row')
        div(class='col-sm-5')
          div(class='col-sm-2')
            p Date:
          div(class='col-sm-10')
            p= project.date_string
        div(class='col-sm-5')
          div(class='col-sm-4')
            p Location:
          div(class='col-sm-8')
            a(href='https://google.com/maps/search/#{project.location}', target='_blank') #{project.location}
        div(class='col-sm-2')
          div(class='col-sm-4')
            p Host:
          div(class='col-sm-8')
            a(href='/users/#{project.host_username}') #{project.host_name}
